nums=[5,9,1,8,7]
n=len(nums)
maxx=0
ans=[]
for i in range(n):
    for j in range(i,n):
        temp=[]
        for k in range(i,j+1):
            temp.append(nums[k])
        ans.append(temp)
v=len(ans)
for i in range(v):
    if(len(ans[i])==3):
        m=sum(ans[i])
        maxx=max(m,maxx)
print(maxx)
        
